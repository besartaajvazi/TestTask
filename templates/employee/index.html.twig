{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12 mt-4">
                    <h5 class="mb-3">Import Data from Excel</h5>
                    <hr>
                    {% if app.flashes.status is defined %}
                        <h5>{{ app.flashes.status }}</h5>
                        {% set _ = app.flashes.remove('status') %}
                    {% endif %}

                    <form action="{{ path('import') }}" method="POST" enctype="multipart/form-data">
                        <div class="card card-body shadow">
                            <div class="row">
                                <div class="col-md-2 my-auto">
                                    <h5> Select File</h5>
                                </div>
                                <div class="col-md-4">
                                    <input type="file" name="import_file" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" name="import_file_btn" class="btn btn-primary"> Upload File</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
           <hr>
              <div class="row">
                <div class="col-md-12">
                    <h5>Employee List</h5>
                    <hr>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Manager</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>St. Date</th>
                                <th>End Date</th>
                                <th>IsActive</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>{{ employee.name }}</td>
                                    <td>{{ employee.manager }}</td>
                                    <td>{{ employee.username }}</td>
                                    <td>{{ employee.email }}</td>
                                    <td>{{ employee.department }}</td>
                                    <td>{{ employee.phoneNumber }}</td>
                                    <td>{{ employee.address1 }}</td>
                                    <td>{{ employee.startDate }}</td>
                                    <td>{{ employee.endDate }}</td>  
                                    <td>{% if employee.isActive == 1 %}true{% else %}false{% endif %}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
    </body>
</div>

{% endblock %}
